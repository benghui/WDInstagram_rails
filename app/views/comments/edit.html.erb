<div class = "container">
    <h2>Edit Comment</h2>
    <%= form_with scope: :comment, url: photo_comment_path, html: {method: :put}, local: true do |form| %>

    <p>
        <%= form.label :comment %><br>
        <%= form.text_area :comment %>
    </p>

    <p>
        <%= form.submit %>
    </p>
    <% end %>

    <%= link_to 'Back', photo_comments_path %>
</div>